<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFFFFF">

    <com.example.darksoul.myapplication.hexagons.QuaterlyHexagonLayout
        android:id="@+id/quat_bott_center"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="75dp"/>


    <com.example.darksoul.myapplication.hexagons.QuaterlyHexagonLayout
        android:id="@+id/quat_top_left"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#FFFFFF"
        android:layout_toStartOf="@id/quat_bott_center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="75dp"/>


    <com.example.darksoul.myapplication.hexagons.QuaterlyHexagonLayout
        android:id="@+id/quat_top_right"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#FFFFFF"
        android:layout_toEndOf="@id/quat_bott_center"
        android:layout_marginStart="75dp"
        android:layout_marginTop="75dp"
        android:layout_alignParentTop="true"/>

</RelativeLayout>