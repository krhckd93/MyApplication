<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#FFFFFF" >
    <RelativeLayout
        android:id="@+id/sector_parent_left"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="2dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/left1"/>
    </RelativeLayout>
    <com.example.darksoul.myapplication.sector.SectorParentViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/sector_parent_right"
        android:layout_toEndOf="@id/sector_parent_left"
        android:background="#FFFFFF">

    </com.example.darksoul.myapplication.sector.SectorParentViewPager>
    <RelativeLayout
        android:id="@+id/sector_parent_right"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="2dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/right1"/>
    </RelativeLayout>
</RelativeLayout>