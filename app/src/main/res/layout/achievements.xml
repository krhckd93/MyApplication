<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"	android:layout_width="match_parent" android:layout_height="wrap_content"	android:background="#F7F7F7"	android:layout_marginBottom="30dp" >	<ScrollView android:id="@+id/Achievements" 		android:layout_width="match_parent"		android:layout_height="match_parent" >		<RelativeLayout android:id="@+id/content_container" 			android:layout_width="match_parent"			android:layout_height="match_parent" >			<RelativeLayout android:id="@+id/frame_3_achievements"				android:layout_width="match_parent"				android:layout_height="match_parent"				>				<View android:id="@+id/background"					android:background="@drawable/background_shape"					 android:layout_marginStart="0dp"					android:layout_marginTop="0dp"					android:layout_width="match_parent"					android:layout_height="match_parent" />				<RelativeLayout android:id="@+id/heading"					android:layout_marginTop="0dp"					android:layout_marginStart="0dp"					android:layout_width="match_parent"					android:layout_height="wrap_content"					android:background="#FFFFFF"					>					<View android:id="@+id/background_1"						android:background="@drawable/background_1_shape"						 android:layout_marginStart="0dp"						android:layout_marginTop="0dp"						android:layout_width="1040dp"						android:layout_height="92dp" />					<TextView android:id="@+id/achievements"						android:fontFamily="OpenSans-Bold"						android:layout_gravity="center_horizontal|center"						android:gravity="center"						android:textAllCaps="true"						android:textSize="29sp"						android:textColor="@color/achievements_color"						android:layout_marginStart="401dp"						android:layout_marginTop="34dp"						android:layout_width="237dp"						android:layout_height="38dp"						android:text="@string/achievements_string"						 />					<ImageView android:id="@+id/backicon"						android:src="@drawable/backicon"						android:contentDescription="@string/ek_img_content"						 android:layout_marginStart="41dp"						android:layout_marginTop="24dp"						android:layout_width="41dp"						android:layout_height="41dp" />				</RelativeLayout>				<RelativeLayout android:id="@+id/top_bar"					android:layout_marginTop="8dp"					android:layout_marginStart="0dp"					android:layout_width="wrap_content"					android:layout_height="wrap_content"					>					<View android:id="@+id/background_"						android:background="@drawable/background__shape"						 android:layout_marginStart="0dp"						android:layout_marginTop="0dp"						android:layout_width="1275dp"						android:layout_height="103dp" />					<TextView android:id="@+id/achievements_1"						android:fontFamily="OpenSans-Bold"						android:textAllCaps="true"						android:textSize="33sp"						android:textColor="@color/achievements_color"						android:layout_marginStart="500dp"						android:layout_marginTop="28dp"						android:layout_width="262dp"						android:layout_height="43dp"						android:text="@string/achievements_1_string"						 />					<ImageView android:id="@+id/back_icon"						android:src="@drawable/back_icon"						android:contentDescription="@string/ek_img_content"						 android:layout_marginStart="36dp"						android:layout_marginTop="28dp"						android:layout_width="41dp"						android:layout_height="41dp" />				</RelativeLayout>				<LinearLayout					android:layout_width="match_parent"					android:layout_height="wrap_content"					android:layout_marginStart="0dp"					android:layout_marginTop="256dp"					android:orientation="horizontal"					android:weightSum="5"					android:paddingStart="30dp"					android:paddingEnd="30dp">					<ImageView android:id="@+id/fifth"						android:src="@drawable/fifth"						android:contentDescription="@string/ek_img_content"						android:layout_width="182dp"						android:layout_height="217dp"						android:layout_weight="1"/>					<ImageView android:id="@+id/fourth"						android:src="@drawable/fourth"						android:contentDescription="@string/ek_img_content"						android:layout_width="183dp"						android:layout_height="217dp"						android:layout_weight="1" />					<ImageView android:id="@+id/third"						android:src="@drawable/third"						android:contentDescription="@string/ek_img_content"						android:layout_width="182dp"						android:layout_height="217dp"						android:layout_weight="1"/>					<ImageView android:id="@+id/second"						android:src="@drawable/second"						android:contentDescription="@string/ek_img_content"						android:layout_width="185dp"						android:layout_height="217dp"						android:layout_weight="1"/>					<ImageView android:id="@+id/first"						android:src="@drawable/first"						android:contentDescription="@string/ek_img_content"						android:layout_width="182dp"						android:layout_height="217dp"						android:layout_weight="1" />				</LinearLayout>			</RelativeLayout>		</RelativeLayout>	</ScrollView></RelativeLayout>