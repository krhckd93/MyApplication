<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent" >


    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/background_">
        <ImageView
            android:id="@+id/polygon__4"
            android:layout_width="180dp"
            android:layout_height="207dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/ek_img_content"
            android:src="@drawable/polygon__4"
            android:layout_marginTop="50dp"/>

        <ImageView
            android:id="@+id/hex_6"
            android:layout_width="171dp"
            android:layout_height="197dp"
            android:layout_marginTop="120dp"
            android:contentDescription="@string/ek_img_content"
            android:src="@drawable/hex_6"
            android:layout_marginEnd="100dp"
            android:layout_toStartOf="@+id/polygon__4" />

        <ImageView
            android:id="@+id/hex_3"
            android:layout_width="170dp"
            android:layout_height="197dp"
            android:contentDescription="@string/ek_img_content"
            android:src="@drawable/hex_3"
            android:layout_marginStart="100dp"
            android:layout_toEndOf="@+id/polygon__4"
            android:layout_marginTop="120dp"/>

        <ImageView
            android:id="@+id/hex"
            android:layout_width="171dp"
            android:layout_height="197dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/ek_img_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:src="@drawable/hex" />

        <ImageView
            android:id="@+id/polygon_1"
            android:layout_width="180dp"
            android:layout_height="207dp"
            android:src="@drawable/polygon_1"
            android:contentDescription="@string/ek_img_content"
            android:layout_toStartOf="@id/hex"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="120dp"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:id="@+id/polygon_"
            android:layout_width="179dp"
            android:layout_height="208dp"
            android:contentDescription="@string/ek_img_content"
            android:src="@drawable/polygon_"
            android:layout_marginStart="100dp"
            android:layout_marginBottom="120dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/hex"/>

    </RelativeLayout>

</RelativeLayout>
