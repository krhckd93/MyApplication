<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_weight="1">
        <com.example.darksoul.myapplication.hexagons.QuaterlyHexagonLayout
            android:id="@+id/top_left"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#FFFFFF"
            android:layout_weight="1"/>
        <com.example.darksoul.myapplication.hexagons.QuaterlyHexagonLayout
            android:id="@+id/top_center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#FFFFFF"
            android:layout_weight="1"/>
        <com.example.darksoul.myapplication.hexagons.QuaterlyHexagonLayout
            android:id="@+id/top_right"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#FFFFFF"
            android:layout_weight="1"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_weight="1">
        <com.example.darksoul.myapplication.hexagons.QuaterlyHexagonLayout
            android:id="@+id/mid_left"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#FFFFFF"
            android:layout_weight="1"/>
        <com.example.darksoul.myapplication.hexagons.BiannualHexagonLayout
            android:id="@+id/mid_center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#FFFFFF"
            android:layout_weight="1"/>
        <com.example.darksoul.myapplication.hexagons.QuaterlyHexagonLayout
            android:id="@+id/mid_right"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#FFFFFF"
            android:layout_weight="1"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_weight="1">
        <com.example.darksoul.myapplication.hexagons.QuaterlyHexagonLayout
            android:id="@+id/bott_left"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#FFFFFF"
            android:layout_weight="1"/>
        <com.example.darksoul.myapplication.hexagons.QuaterlyHexagonLayout
            android:id="@+id/bott_center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#FFFFFF"
            android:layout_weight="1"/>
        <com.example.darksoul.myapplication.hexagons.MonthlyHexagonLayout
            android:id="@+id/bott_right"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#FFFFFF"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>