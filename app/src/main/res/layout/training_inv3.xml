<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"	android:layout_width="match_parent" android:layout_height="wrap_content" >	<ScrollView android:id="@+id/Video" 		android:layout_width="match_parent"		android:layout_height="match_parent" >		<RelativeLayout android:id="@+id/content_container" 			android:layout_width="match_parent"			android:layout_height="match_parent" >			<RelativeLayout android:id="@+id/video"				android:layout_width="match_parent"				android:layout_height="match_parent">				<RelativeLayout android:id="@+id/content_section"					android:layout_marginTop="60dp"					android:layout_marginStart="0dp"					android:layout_width="wrap_content"					android:layout_height="wrap_content"					android:layout_centerHorizontal="true"					>					<View android:id="@+id/mask"						android:background="@drawable/mask_shape"						 android:layout_marginStart="0dp"						android:layout_marginTop="0dp"						android:layout_width="922dp"						android:layout_height="540dp" />					<ImageView android:id="@+id/image"						android:src="@drawable/image_tr_inv3"						android:contentDescription="@string/ek_img_content"						 android:layout_marginStart="9dp"						android:layout_marginTop="20dp"						android:layout_width="901dp"						android:layout_height="505dp" />					<View android:id="@+id/overlay"						android:background="@drawable/overlay_shape"						 android:alpha="0.81960784313725"						 android:layout_marginStart="0dp"						android:layout_marginTop="0dp"						android:layout_width="922dp"						android:layout_height="540dp" />					<ImageView android:id="@+id/youtube_icon"						android:src="@drawable/youtube_icon"						android:contentDescription="@string/ek_img_content"						 android:layout_marginStart="430dp"						android:layout_marginTop="240dp"						android:layout_width="82dp"						android:layout_height="82dp" />				</RelativeLayout>			</RelativeLayout>		</RelativeLayout>	</ScrollView></RelativeLayout>